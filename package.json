{
  "name": "video-website",
  "version": "1.0.0",
  "description": "Input: directory of videos. Output: static HTML website which lists videos in an RSS feed",
  "main": "index.js",
  "engines": {
    "node": ">=v15.0.0"
  },
  "engineStrict": "true",
  "scripts": {
    "start": "node index",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "light-server -s ./_site -p 7000",
    "supervise": "supervisor -- --trace-warnings --unhandled-rejections=strict ./index.js",
    "dev": "concurrently npm:dev:transcoder npm:dev:builder",
    "dev:db": "concurrently npm:dev:redis npm:dev:redis-ui",
    "dev:redis": "docker rm -f futureporn_redis > /dev/null 2>&1; docker run --rm --name futureporn_redis -p 6379:6379 redis",
    "dev:redis-ui": "redis-commander",
    "dev:ripper": "supervisor -- --trace-warnings --unhandled-rejections=strict ripper.js",
    "dev:transcoder": "supervisor -- --trace-warnings --unhandled-rejections=strict transcoder.js",
    "dev:builder": "supervisor -- --trace-warnings --unhandled-rejections=strict builder.js",
    "ripper": "node ripper",
    "transcoder": "node transcoder",
    "builder": "node builder",
    "e2e": "cd tmp && rm -f NBA*.mp4 && youtube-dl -f worst --external-downloader-args '-t 1' https://www.twitch.tv/nba",
    "build": "npm run build:docker",
    "build:scripts": "cp node_modules/plyr/dist/plyr.min.js.map node_modules/plyr/dist/plyr.min.js website/js/ && cp node_modules/plyr/dist/plyr.css website/css/",
    "build:website": "npx @11ty/eleventy",
    "build:docker": "docker build -t futureporn"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/insanity54/video-website.git"
  },
  "author": "Chris Grimmett <chris@grimtech.net>",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/insanity54/video-website/issues"
  },
  "homepage": "https://github.com/insanity54/video-website#readme",
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-rss": "^1.0.9",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "clean-css": "^4.2.3",
    "concurrently": "^5.3.0",
    "debug": "^4.3.1",
    "dotenv": "^8.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "form-data": "^3.0.0",
    "globby": "^11.0.1",
    "ioredis": "^4.19.4",
    "jstransformer-handlebars": "^1.1.0",
    "luxon": "^1.25.0",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^6.0.1",
    "neocities-extended": "https://github.com/thatcomputerguy0101/neocities-node-extended",
    "node-fetch": "^2.6.1",
    "prevvy": "^2.3.0",
    "voddo": "0.0.4"
  },
  "devDependencies": {
    "plyr": "^3.6.3",
    "supervisor": "^0.12.0"
  },
  "private": true,
  "workspaces": ["common", "ripper", "builder", "transcoder"]
}
